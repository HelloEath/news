<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

   <ImageView
       android:id="@+id/circlrimage"
       android:layout_width="30dp"
       android:layout_height="30dp"

       android:layout_margin="10dp"

      />




<scut.carson_ho.searchview.SearchView
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="30dp"
    app:textSizeSearch="5dp"
    app:textColorSearch="#3F51B5"
    app:textHintSearch="输入查询关键字"
    app:searchBlockHeight="100"
    app:searchBlockColor="#ffffff">

</scut.carson_ho.searchview.SearchView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/type_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tab_menu_item"
                android:background="@drawable/btn_home_bg_selecter"
                android:text="推荐"
                />
            <RadioButton
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tab_menu_item"
                android:background="@drawable/btn_home_bg_selecter"
                android:text="桂林"
                />
            <RadioButton
                android:id="@+id/it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tab_menu_item"
                android:background="@drawable/btn_home_bg_selecter"
                android:text="科技"
                />
            <RadioButton
                android:id="@+id/hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tab_menu_item"
                android:background="@drawable/btn_home_bg_selecter"
                android:text="热点"
                />
            <RadioButton
                android:id="@+id/international"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tab_menu_item"
                android:background="@drawable/btn_home_bg_selecter"
                android:text="国际"
                />
            <RadioButton
                android:id="@+id/fun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tab_menu_item"
                android:background="@drawable/btn_home_bg_selecter"
                android:text="搞笑"
                />

        </RadioGroup>

<android.support.v4.view.ViewPager
    android:id="@+id/viewger_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


</android.support.v4.view.ViewPager>

    </LinearLayout>



</LinearLayout>