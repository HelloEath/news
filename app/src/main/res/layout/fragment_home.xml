<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6F6F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:background="#F6F6F6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

   <ImageView
       android:id="@+id/circlrimage"
       android:layout_width="30dp"
       android:layout_height="30dp"

       android:layout_margin="10dp"

      />



<com.glut.news.view.searchview.SearchView
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:textSizeSearch="5dp"
    app:textColorSearch="#3F51B5"
    app:textHintSearch="输入查询关键字"
    app:searchBlockHeight="150"
    app:searchBlockColor="#F6F6F6"

    >

</com.glut.news.view.searchview.SearchView>
</LinearLayout>
    <android.support.design.widget.TabLayout
        android:fitsSystemWindows="true"
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:tabIndicatorColor="#5c71ff"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="#5c71ff"
        app:tabGravity="center"
        app:tabTextColor="#686868"
        app:tabMode="scrollable"
        />

<android.support.v4.view.ViewPager
    android:id="@+id/viewger_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


</android.support.v4.view.ViewPager>





</LinearLayout>